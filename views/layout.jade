doctype html
html(lang='en')
  head
    title Welcome
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    img.logo(src='/images/logo.jpg')
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') LoginAndBlog
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user
              li(class=(title == 'Members' ? 'active' : ''))
                a(href='/') Members
              li(class=(title == 'Add Post' ? 'active' : ''))
                a(href='/posts/add') Add Post
              li(class=(title == 'Add Category' ? 'active' : ''))
                a(href='/categories/add') Add Category
            if !user
              li(class=(title == 'Register' ? 'active' : ''))
                a(href='/users/register') Register
              li(class=(title == 'Login' ? 'active' : ''))
                a(href='/users/login') Login
          ul.nav.navbar-nav.navbar-right
            li(class=(title == 'Contact' ? 'active' : ''))
               a(href='/users/contact') Contact
            if user
              li
                a(href='/users/logout') Logout
    .container
     !=messages()
     block content